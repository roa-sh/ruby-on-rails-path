<div class="content">
  <div class="card border-primary mb-3" >
    <div class="card-header">
      <svg xmlns="http://www.w3.org/2000/svg" class="avatar" fill="currentColor"
              class="bi bi-person-circle" viewBox="0 0 16 16" >
        <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0z" />
        <path fill-rule="evenodd"
                d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8zm8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1z" />
      </svg>
      <%= get_author(@article.user_id).name%>
      <div class="right_floating_box">
        <% if following?(@article.user_id) %>
          <%status = 'Unfollow' %>
          <%btn_class = 'btn btn-danger' %>
        <% else %>
          <%status = 'Follow' %>
          <%btn_class = 'btn btn-primary' %>
        <% end %>
        <%= button_to status, {action: 'toggle_follow'}, params: { current_user: @current_user, author: @article.user_id }, data: {confirm: 'Are you sure?'}, class: btn_class %>
        <div class="form-check form-switch">
        </div>
      </div>
    </div>
    <div class="card-body">
      <h4 class="card-title"><%= @article.title %></h4>
      <p class="card-text"><%= @article.body %></p>
      <% unless @visitor %>
        <div class="row">
          <div class="col col-lg-1">
            <%= button_to 'Edit', edit_article_path(@article), method: :get, class: 'btn btn-warning' %>
          </div>
          <div class="col col-lg-1">
            <%= button_to 'Destroy', article_path(@article), method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn btn-danger' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <h2>Comments</h2>
  <div class="row">
    <%= render @article.comments %>
  </div>
  <h2>Add a comment:</h2>
  <% if following?(@article.user_id) %>
    <div id="comment-section">
      <%= render 'comments/form' %>
    </div>
  <% else  %>
    <div class="alert alert-dismissible alert-warning" id="follow-first">
      <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
      <h4 class="alert-heading">Warning!</h4>
      <p class="mb-0"><strong>Want to leave a comment? </strong>You must follow the author first!</p>
    </div>
  <% end  %>
</div>
